<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="triangle3" class="com.spring.javabrains.applicationcontext.Triangle3">
		<property name="a" ref="pointA" />
		<property name="b" ref="pointB" />
		<property name="c" ref="pointC" />
	</bean>
	
	<bean id="pointA" class="com.spring.javabrains.applicationcontext.Point">
		<property name="x" value="10" />
		<property name="y" value="20" />
	</bean>

	<bean id="pointB" class="com.spring.javabrains.applicationcontext.Point">
		<property name="x" value="30" />
		<property name="y" value="40" />
	</bean>

	<bean id="pointC" class="com.spring.javabrains.applicationcontext.Point">
		<property name="x" value="50" />
		<property name="y" value="60" />
	</bean>

</beans>