<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="triangle1" class="com.spring.javabrains.applicationcontext.Triangle1">
		<!-- this will invoke setter injection through setType method -->
		<property name="typeForSetterInvocation" value="Equilateral"/>
		<constructor-arg value="RightAngle"/>
	</bean>

</beans>